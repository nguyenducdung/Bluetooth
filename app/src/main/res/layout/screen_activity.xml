<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        android:gravity="center"
        android:text="@string/do_nhiet_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_nhiet"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:textSize="18sp"
        android:text="@string/nhiet_do"
        android:layout_below="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:id="@+id/tv_nhiet_do"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_toEndOf="@id/tv_nhiet"
        android:layout_below="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_1"
        android:textSize="18sp"
        android:text="@string/do_am"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_below="@id/tv_nhiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:textSize="18sp"
        android:layout_toEndOf="@id/tv_1"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_below="@id/tv_nhiet_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>